{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ProductPictures</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td><img src="{{ asset('uploads/documents/') }}{{ entity.path }}" /></td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('productpictures') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('productpictures_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
